{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2015",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": [
            "DOM",
            "ES2017",
            "DOM.Iterable"
        ]
    },
    "include": [
        "*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}